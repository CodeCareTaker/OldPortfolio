<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="newText">Post a New Comment on <%= project.title %> </h1>
        <div class="formContainer">
            <form action="/projects/<%= project._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Type Comment Here">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/projects/<%= project._id %>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>